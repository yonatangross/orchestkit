{
  "$schema": "https://claude.ai/schemas/plugin-settings.json",
  "respectGitignore": true,
  "plansDirectory": ".claude/plans",
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "mcp__context7__*",
      "mcp__memory__*"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf .)",
      "Bash(chmod 777 *)",
      "Bash(chmod -R 777 *)",
      "Bash(git push --force origin main)",
      "Bash(git push --force origin master)",
      "Bash(git push -f origin main)",
      "Bash(git push -f origin master)",
      "Bash(mkfs*)",
      "Bash(dd if=*)",
      "Bash(> /dev/sd*)",
      "Bash(:(){ :|:& };:)"
    ]
  },
  "spinnerVerbs": {
    "mode": "append",
    "verbs": [
      "Orchestrating",
      "Coordinating",
      "Synthesizing",
      "Architecting",
      "Dispatching",
      "Producing",
      "Rendering",
      "Composing"
    ]
  }
}
