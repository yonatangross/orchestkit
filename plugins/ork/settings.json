{
  "$schema": "https://claude.ai/schemas/plugin-settings.json",
  "respectGitignore": true,
  "plansDirectory": ".claude/plans",
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "mcp__context7__*",
      "mcp__memory__*"
    ],
    "deny": []
  },
  "spinnerVerbs": {
    "mode": "append",
    "verbs": [
      "Orchestrating",
      "Coordinating",
      "Synthesizing",
      "Architecting",
      "Dispatching",
      "Producing",
      "Rendering",
      "Composing"
    ]
  }
}
